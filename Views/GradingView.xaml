<UserControl x:Class="SimpleOverlayEditor.Views.GradingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 헤더 -->
        <Border Grid.Row="0" 
                Background="#C62828"
                Padding="30,25"
                BorderThickness="0,0,0,2"
                BorderBrush="#B71C1C">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="채점 및 성적 처리" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          VerticalAlignment="Center"
                          TextOptions.TextRenderingMode="ClearType"
                          TextOptions.TextFormattingMode="Display"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Excel 내보내기"
                           Command="{Binding ExportToExcelCommand}"
                           Style="{StaticResource CleanButtonSmall}"
                           Background="#4CAF50"
                           Margin="0,0,10,0"/>
                    <Button Content="홈으로"
                           Command="{Binding NavigateToHomeCommand}"
                           Style="{StaticResource CleanButtonSmall}"
                           Background="#616161"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 경고 및 요약 정보 (DataGrid 위) -->
        <Border Grid.Row="1"
                Background="#FFF3CD"
                BorderBrush="#FFC107"
                BorderThickness="0,0,0,2"
                Padding="15,10"
                Margin="10,10,10,0"
                Visibility="{Binding HasWarnings, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="⚠ OMR 결과 요약" 
                           FontWeight="Bold" 
                           FontSize="14"
                           Foreground="#856404"
                           Margin="0,0,0,8"/>
                
                <!-- OMR 결과 통계 -->
                <StackPanel Margin="0,0,0,8">
                    <TextBlock Foreground="#856404" FontWeight="SemiBold">
                        <Run Text="총 용지: "/>
                        <Run Text="{Binding TotalSheetCount, Mode=OneWay}"/>
                        <Run Text="개"/>
                    </TextBlock>
                    <TextBlock Foreground="#856404" 
                               Visibility="{Binding ErrorSheetCount, Mode=OneWay, Converter={StaticResource IntToVisibilityConverter}}"
                               Margin="0,2,0,0"
                               TextWrapping="Wrap">
                        <Run Text="오류 있는 용지: "/>
                        <Run Text="{Binding ErrorSheetCount, Mode=OneWay}" FontWeight="Bold" Foreground="#C62828"/>
                        <Run Text="개"/>
                        <Run Text="{Binding ErrorSheetList, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock Foreground="#856404" 
                               Visibility="{Binding DuplicateCombinedIdCount, Mode=OneWay, Converter={StaticResource IntToVisibilityConverter}}"
                               Margin="0,2,0,0"
                               TextWrapping="Wrap">
                        <Run Text="중복 결합ID: "/>
                        <Run Text="{Binding DuplicateCombinedIdCount, Mode=OneWay}" FontWeight="Bold" Foreground="#C62828"/>
                        <Run Text="개"/>
                        <Run Text="{Binding DuplicateCombinedIdList, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock Foreground="#856404" 
                               Visibility="{Binding NullCombinedIdCount, Mode=OneWay, Converter={StaticResource IntToVisibilityConverter}}"
                               Margin="0,2,0,0"
                               TextWrapping="Wrap">
                        <Run Text="결합ID 없음: "/>
                        <Run Text="{Binding NullCombinedIdCount, Mode=OneWay}" FontWeight="Bold" Foreground="#C62828"/>
                        <Run Text="개"/>
                        <Run Text="{Binding NullCombinedIdList, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>

                <!-- 수험번호 불일치 -->
                <Separator Margin="0,5" Background="#FFC107" Visibility="{Binding HasMismatch, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <TextBlock Text="⚠ 수험번호 불일치 발견" 
                           FontWeight="Bold" 
                           FontSize="13"
                           Foreground="#856404"
                           Margin="0,5,0,5"
                           Visibility="{Binding HasMismatch, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <TextBlock Text="{Binding MismatchMessage}"
                           Foreground="#856404"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"
                           Margin="0,0,0,5"
                           Visibility="{Binding HasMismatch, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <StackPanel Margin="10,0,0,0" Visibility="{Binding HasMismatch, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding MissingInGradingList}"
                               Foreground="#856404"
                               TextWrapping="Wrap"
                               Visibility="{Binding MissingInGradingList, Converter={StaticResource NullToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding MissingInRegistryList}"
                               Foreground="#856404"
                               TextWrapping="Wrap"
                               Margin="0,3,0,0"
                               Visibility="{Binding MissingInRegistryList, Converter={StaticResource NullToVisibilityConverter}}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 필터 영역 -->
        <Border Grid.Row="2"
                Background="#F5F5F5"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,1"
                Padding="10,8"
                Margin="10,5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="필터:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0" 
                           FontWeight="SemiBold"/>
                
                <!-- 라디오 필터: 전체/오류만/중복만 -->
                <RadioButton Content="전체" 
                            IsChecked="{Binding FilterMode, Converter={StaticResource StringEqualsConverter}, ConverterParameter=All}"
                            Command="{Binding SetFilterModeCommand}" 
                            CommandParameter="All"
                            Margin="5,0"
                            GroupName="FilterMode"
                            VerticalAlignment="Center"/>
                <RadioButton Content="단순 오류만" 
                            IsChecked="{Binding FilterMode, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Errors}"
                            Command="{Binding SetFilterModeCommand}" 
                            CommandParameter="Errors"
                            Margin="5,0"
                            GroupName="FilterMode"
                            VerticalAlignment="Center"/>
                <RadioButton Content="중복만" 
                            IsChecked="{Binding FilterMode, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Duplicates}"
                            Command="{Binding SetFilterModeCommand}" 
                            CommandParameter="Duplicates"
                            Margin="5,0"
                            GroupName="FilterMode"
                            VerticalAlignment="Center"/>
                
                <!-- 시각/실/순 필터 -->
                <Rectangle Width="1" Height="20" Fill="#E0E0E0" Margin="15,5" VerticalAlignment="Center"/>
                
                <TextBlock Text="시각:" VerticalAlignment="Center" Margin="5,0,3,0" FontWeight="SemiBold"/>
                <ComboBox ItemsSource="{Binding SessionFilterOptions}"
                          SelectedItem="{Binding SelectedSessionFilter, UpdateSourceTrigger=PropertyChanged}"
                          Width="80"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0"/>
                
                <TextBlock Text="실:" VerticalAlignment="Center" Margin="5,0,3,0" FontWeight="SemiBold"/>
                <ComboBox ItemsSource="{Binding RoomFilterOptions}"
                          SelectedItem="{Binding SelectedRoomFilter, UpdateSourceTrigger=PropertyChanged}"
                          Width="80"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0"/>
                
                <TextBlock Text="순:" VerticalAlignment="Center" Margin="5,0,3,0" FontWeight="SemiBold"/>
                <ComboBox ItemsSource="{Binding OrderFilterOptions}"
                          SelectedItem="{Binding SelectedOrderFilter, UpdateSourceTrigger=PropertyChanged}"
                          Width="80"
                          VerticalAlignment="Center"
                          Margin="0,0,5,0"/>
            </StackPanel>
        </Border>

        <!-- DataGrid -->
        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding FilteredGradingResults}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  SelectionMode="Extended"
                  SelectedItem="{Binding SelectedGradingResult, Mode=TwoWay}"
                  GridLinesVisibility="All"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F5F5F5"
                  Margin="10"
                  Sorting="GradingDataGrid_Sorting"
                  MouseDoubleClick="GradingDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="수험번호" Binding="{Binding StudentId}" SortMemberPath="StudentId" Width="100"/>
                <DataGridTextColumn Header="시각" Binding="{Binding Session}" SortMemberPath="Session" Width="50">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="실" Binding="{Binding RoomNumber}" SortMemberPath="RoomNumber" Width="50">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="순" Binding="{Binding OrderNumber}" SortMemberPath="OrderNumber" Width="50">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="접수번호" Binding="{Binding RegistrationNumber}" SortMemberPath="RegistrationNumber" Width="100"/>
                <DataGridTextColumn Header="전형명" Binding="{Binding ExamType}" SortMemberPath="ExamType" Width="100"/>
                <DataGridTextColumn Header="성명" Binding="{Binding StudentName}" SortMemberPath="StudentName" Width="100"/>
                <DataGridTextColumn Header="생년월일" Binding="{Binding BirthDate}" SortMemberPath="BirthDate" Width="120"/>
                <DataGridTextColumn Header="출신교명" Binding="{Binding MiddleSchool}" SortMemberPath="MiddleSchool" Width="150"/>
                <DataGridTextColumn Header="문항1" Binding="{Binding Question1Marking, StringFormat=F1}" SortMemberPath="Question1Marking" Width="70">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="문항2" Binding="{Binding Question2Marking, StringFormat=F1}" SortMemberPath="Question2Marking" Width="70">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="문항3" Binding="{Binding Question3Marking, StringFormat=F1}" SortMemberPath="Question3Marking" Width="70">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="문항4" Binding="{Binding Question4Marking, StringFormat=F1}" SortMemberPath="Question4Marking" Width="70">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="총점" Binding="{Binding TotalScore, StringFormat=F1}" SortMemberPath="TotalScore" Width="75">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="석차(감점 미반영)" Binding="{Binding Rank}" SortMemberPath="Rank" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridCheckBoxColumn Header="오류" Binding="{Binding IsSimpleError}" SortMemberPath="IsSimpleError" Width="60" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Header="중복" Binding="{Binding IsDuplicate}" SortMemberPath="IsDuplicate" Width="60" IsReadOnly="True"/>
                <DataGridTextColumn Header="중복수" Binding="{Binding DuplicateCount}" SortMemberPath="DuplicateCount" Width="70">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>

            <!-- 중복 및 오류 행을 색깔로 표시 -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <!-- 중복과 오류가 모두 있는 경우: 진한 빨간색 -->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsDuplicate}" Value="True"/>
                                <Condition Binding="{Binding HasErrors}" Value="True"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Background" Value="#E57373"/>
                            <Setter Property="ToolTip" Value="중복 및 오류가 모두 있습니다."/>
                        </MultiDataTrigger>
                        <!-- 오류만 있는 경우: 주황색 -->
                        <DataTrigger Binding="{Binding HasErrors}" Value="True">
                            <Setter Property="Background" Value="#FFB74D"/>
                            <Setter Property="ToolTip" Value="오류가 있습니다."/>
                        </DataTrigger>
                        <!-- 중복만 있는 경우: 연한 빨간색 -->
                        <DataTrigger Binding="{Binding IsDuplicate}" Value="True">
                            <Setter Property="Background" Value="#FFCDD2"/>
                            <Setter Property="ToolTip" Value="같은 수험번호+면접번호 조합으로 여러 용지가 존재합니다. (중복)"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
    </Grid>
</UserControl>
