<UserControl x:Class="SimpleOverlayEditor.Views.TemplateEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SimpleOverlayEditor.ViewModels"
             xmlns:models="clr-namespace:SimpleOverlayEditor.Models"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>  <!-- 왼쪽: 샘플 이미지 정보 -->
            <ColumnDefinition Width="*"/>    <!-- 중앙: 이미지 뷰 -->
            <ColumnDefinition Width="240"/>  <!-- 오른쪽: 정보 패널 -->
        </Grid.ColumnDefinitions>

        <!-- 왼쪽: 샘플 이미지 정보 -->
        <DockPanel Grid.Column="0" Background="#F5F5F5">
            <StackPanel DockPanel.Dock="Top" Margin="10">
                <TextBlock Text="샘플 이미지" 
                          FontWeight="Bold" 
                          FontSize="14"
                          Margin="0,10,0,10"/>
                <Button Content="이미지 로드" 
                       Command="{Binding LoadSampleImageCommand}"
                       Margin="0,0,0,10"
                       Padding="8,5"
                       Background="#4CAF50"
                       Foreground="White"
                       FontWeight="Bold"/>
                <Button Content="홈으로" 
                       Command="{Binding NavigateToHomeCommand}"
                       Margin="0,0,0,10"
                       Padding="8,5"
                       Background="#757575"
                       Foreground="White"/>
            </StackPanel>
            <StackPanel Margin="10">
                <GroupBox Header="이미지 정보" Margin="0,0,0,10">
                    <StackPanel Margin="5" IsEnabled="{Binding SelectedDocument, Converter={StaticResource NullToBoolConverter}}">
                        <TextBlock Margin="0,5,0,2" TextWrapping="Wrap">
                            <Run Text="파일명:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="{Binding SelectedDocument.SourcePath, Converter={StaticResource FileNameConverter}}" 
                                 FontSize="11"/>
                        </TextBlock>
                        <TextBlock Margin="0,10,0,2">
                            <Run Text="너비:" FontWeight="Bold"/>
                            <Run Text="{Binding SelectedDocument.ImageWidth}"/> <Run Text="px"/>
                        </TextBlock>
                        <TextBlock Margin="0,5,0,2">
                            <Run Text="높이:" FontWeight="Bold"/>
                            <Run Text="{Binding SelectedDocument.ImageHeight}"/> <Run Text="px"/>
                        </TextBlock>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </DockPanel>

        <!-- 중앙: 이미지 뷰 + 도구바 -->
        <DockPanel Grid.Column="1">
            <!-- 상단 도구바 -->
            <StackPanel DockPanel.Dock="Top" 
                       Orientation="Horizontal" 
                       Background="#E8E8E8"
                       Margin="3"
                       Height="36">
                <ToggleButton Content="사각형 추가 모드" 
                             IsChecked="{Binding IsAddMode, Mode=TwoWay}"
                             Margin="2"
                             Padding="6,3"
                             MinWidth="100"
                             FontSize="11"/>
                <Separator Margin="3,0"/>
                <TextBlock Text="오버레이 타입:" VerticalAlignment="Center" Margin="3,0" FontSize="11"/>
                <ComboBox SelectedItem="{Binding CurrentOverlayType, Mode=TwoWay}"
                         Margin="3,0"
                         VerticalAlignment="Center"
                         MinWidth="100"
                         FontSize="11">
                    <ComboBox.ItemsSource>
                        <x:Array Type="{x:Type models:OverlayType}">
                            <models:OverlayType>TimingMark</models:OverlayType>
                            <models:OverlayType>ScoringArea</models:OverlayType>
                        </x:Array>
                    </ComboBox.ItemsSource>
                </ComboBox>
                <Separator Margin="3,0"/>
                <TextBlock Text="기본 크기:" VerticalAlignment="Center" Margin="3,0" FontSize="11"/>
                <TextBlock Text="W:" VerticalAlignment="Center" Margin="3,0" FontSize="11"/>
                <TextBox Text="{Binding DefaultRectWidth, UpdateSourceTrigger=PropertyChanged}" 
                         Width="50" 
                         Margin="2,0"
                         VerticalAlignment="Center"
                         FontSize="11"/>
                <TextBlock Text="H:" VerticalAlignment="Center" Margin="3,0" FontSize="11"/>
                <TextBox Text="{Binding DefaultRectHeight, UpdateSourceTrigger=PropertyChanged}" 
                         Width="50" 
                         Margin="2,0"
                         VerticalAlignment="Center"
                         FontSize="11"/>
                <Separator Margin="5,0"/>
                <Button Content="선택 삭제" 
                       Command="{Binding DeleteSelectedCommand}"
                       Margin="2"
                       Padding="6,3"
                       MinWidth="65"
                       FontSize="11"/>
                <Button Content="전체 삭제" 
                       Command="{Binding ClearAllCommand}"
                       Margin="2"
                       Padding="6,3"
                       MinWidth="65"
                       FontSize="11"/>
                <Separator Margin="5,0"/>
                <Button Content="템플릿 저장" 
                       Command="{Binding SaveTemplateCommand}"
                       Margin="2"
                       Padding="6,3"
                       MinWidth="80"
                       Background="#4CAF50"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="11"/>
                <Separator Margin="5,0"/>
                <Button Content="기본 템플릿 저장" 
                       Command="{Binding TemplateViewModel.SaveAsDefaultTemplateCommand}"
                       Margin="2"
                       Padding="6,3"
                       MinWidth="100"
                       Background="#2196F3"
                       Foreground="White"
                       FontSize="11"
                       ToolTip="현재 템플릿을 기본 템플릿으로 저장합니다. 프로그램 시작 시 자동으로 로드됩니다."/>
                <Button Content="기본 템플릿 로드" 
                       Command="{Binding TemplateViewModel.LoadDefaultTemplateCommand}"
                       Margin="2"
                       Padding="6,3"
                       MinWidth="100"
                       Background="#FF9800"
                       Foreground="White"
                       FontSize="11"
                       ToolTip="저장된 기본 템플릿을 현재 템플릿으로 로드합니다."/>
            </StackPanel>

            <!-- 이미지 캔버스 -->
            <ScrollViewer x:Name="ImageScrollViewer"
                         HorizontalScrollBarVisibility="Auto"
                         VerticalScrollBarVisibility="Auto"
                         Background="#E0E0E0"
                         VerticalContentAlignment="Top">
                <Canvas x:Name="ImageCanvas" 
                       MouseLeftButtonDown="ImageCanvas_MouseLeftButtonDown"
                       Background="White"
                       SizeChanged="ImageCanvas_SizeChanged"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left">
                    <Image x:Name="SourceImage" 
                          Source="{Binding SelectedDocument.SourcePath}"
                          Stretch="Uniform"
                          RenderOptions.BitmapScalingMode="HighQuality"
                          IsHitTestVisible="False"/>
                    <!-- 오버레이는 코드비하인드에서 동적으로 그리기 -->
                </Canvas>
            </ScrollViewer>
        </DockPanel>

        <!-- 오른쪽: 정보 패널 -->
        <DockPanel Grid.Column="2" Background="#F5F5F5">
            <TextBlock DockPanel.Dock="Top" 
                      Text="템플릿 편집" 
                      FontWeight="Bold" 
                      FontSize="14"
                      Margin="10,10,10,5"
                      Padding="5"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <!-- 오버레이 목록 -->
                    <GroupBox Header="오버레이 목록" Margin="0,0,0,10">
                        <DataGrid ItemsSource="{Binding CurrentOverlayCollection}"
                                 SelectedItem="{Binding SelectedOverlay}"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 SelectionMode="Single"
                                 HeadersVisibility="Column"
                                 MaxHeight="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="타입" Binding="{Binding OverlayType}" Width="80"/>
                                <DataGridTextColumn Header="X" Binding="{Binding X, StringFormat=F1}" Width="50"/>
                                <DataGridTextColumn Header="Y" Binding="{Binding Y, StringFormat=F1}" Width="50"/>
                                <DataGridTextColumn Header="W" Binding="{Binding Width, StringFormat=F1}" Width="50"/>
                                <DataGridTextColumn Header="H" Binding="{Binding Height, StringFormat=F1}" Width="50"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <!-- 선택된 오버레이 상세 편집 -->
                    <GroupBox Header="선택된 사각형 편집" Margin="0,0,0,10">
                        <StackPanel Margin="5" IsEnabled="{Binding SelectedOverlay, Converter={StaticResource NullToBoolConverter}}">
                            <TextBlock Text="X:" Margin="0,5,0,2"/>
                            <TextBox Text="{Binding SelectedOverlay.X, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}"
                                    Margin="0,0,0,5"/>
                            <TextBlock Text="Y:" Margin="0,5,0,2"/>
                            <TextBox Text="{Binding SelectedOverlay.Y, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}"
                                    Margin="0,0,0,5"/>
                            <TextBlock Text="너비 (W):" Margin="0,5,0,2"/>
                            <TextBox Text="{Binding SelectedOverlay.Width, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}"
                                    Margin="0,0,0,5"/>
                            <TextBlock Text="높이 (H):" Margin="0,5,0,2"/>
                            <TextBox Text="{Binding SelectedOverlay.Height, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}"
                                    Margin="0,0,0,5"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>






