<UserControl x:Class="SimpleOverlayEditor.Views.RegistryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 도구바 -->
        <Border Grid.Row="0" 
                Background="#2196F3" 
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="수험생 명렬 관리" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- 수험생 명부 탭일 때만 표시 -->
                    <Button Content="양식 내보내기" 
                           Command="{Binding ExportStudentRegistryTemplateCommand}"
                           Padding="12,5"
                           Background="#FF9800"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsStudentTabSelected}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- 면접위원 명부 탭일 때만 표시 -->
                    <Button Content="양식 내보내기" 
                           Command="{Binding ExportInterviewerRegistryTemplateCommand}"
                           Padding="12,5"
                           Background="#FF9800"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInterviewerTabSelected}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- 수험생 명부 탭일 때만 표시 -->
                    <Button Content="파일 불러오기" 
                           Command="{Binding LoadStudentRegistryCommand}"
                           Padding="12,5"
                           Background="#4CAF50"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsStudentTabSelected}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- 면접위원 명부 탭일 때만 표시 -->
                    <Button Content="파일 불러오기" 
                           Command="{Binding LoadInterviewerRegistryCommand}"
                           Padding="12,5"
                           Background="#4CAF50"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInterviewerTabSelected}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- 수험생 명부 탭일 때만 표시 -->
                    <Button Content="저장" 
                           Command="{Binding SaveStudentRegistryCommand}"
                           Padding="12,5"
                           Background="#2196F3"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsStudentTabSelected}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- 면접위원 명부 탭일 때만 표시 -->
                    <Button Content="저장" 
                           Command="{Binding SaveInterviewerRegistryCommand}"
                           Padding="12,5"
                           Background="#2196F3"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInterviewerTabSelected}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="홈으로" 
                           Command="{Binding NavigateToHomeCommand}"
                           Padding="12,5"
                           Background="#757575"
                           Foreground="White"
                           FontWeight="Normal"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 탭 컨트롤: 수험생/면접위원 명부 -->
        <TabControl Grid.Row="1" 
                   Margin="10"
                   SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">
            <!-- 수험생 명부 탭 -->
            <TabItem Header="수험생 명부">
                <DataGrid ItemsSource="{Binding StudentRegistry.Students}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="True"
                         CanUserDeleteRows="True"
                         IsReadOnly="False"
                         SelectionMode="Single"
                         GridLinesVisibility="All"
                         HeadersVisibility="Column"
                         AlternatingRowBackground="#F5F5F5"
                         Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="수험번호" Binding="{Binding StudentId, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                        <DataGridTextColumn Header="접수번호" Binding="{Binding RegistrationNumber, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                        <DataGridTextColumn Header="전형명" Binding="{Binding ExamType, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                        <DataGridTextColumn Header="성명" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                        <DataGridTextColumn Header="생년월일" Binding="{Binding BirthDate, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                        <DataGridTextColumn Header="출신교명" Binding="{Binding MiddleSchool, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- 면접위원 명부 탭 -->
            <TabItem Header="면접위원 명부">
                <DataGrid ItemsSource="{Binding InterviewerRegistry.Interviewers}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="True"
                         CanUserDeleteRows="True"
                         IsReadOnly="False"
                         SelectionMode="Single"
                         GridLinesVisibility="All"
                         HeadersVisibility="Column"
                         AlternatingRowBackground="#F5F5F5"
                         Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="면접위원번호" Binding="{Binding InterviewerId, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                        <DataGridTextColumn Header="성명" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
