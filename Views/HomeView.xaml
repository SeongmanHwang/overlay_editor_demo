<UserControl x:Class="SimpleOverlayEditor.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <Border Grid.Row="0" 
                Background="#1565C0"
                Padding="30,25"
                BorderThickness="0,0,0,2"
                BorderBrush="#0D47A1">
            <StackPanel>
                <TextBlock Text="자기주도학습전형 성적 처리 프로그램" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"
                          TextOptions.TextRenderingMode="ClearType"
                          TextOptions.TextFormattingMode="Display"/>
            </StackPanel>
        </Border>

        <!-- 메인 콘텐츠 -->
        <Grid Grid.Row="1" 
              VerticalAlignment="Top" 
              HorizontalAlignment="Center"
              Margin="40,30">
            <Grid VerticalAlignment="Top" 
                  HorizontalAlignment="Center"
                  MaxWidth="1200">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 1열: 학교별 설정 -->
                <Grid Grid.Column="0" Grid.Row="0" Grid.RowSpan="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                              Text="학교별 설정" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="#212121"
                              TextOptions.TextRenderingMode="ClearType"
                              Margin="0,0,0,10"/>
                    <Button Grid.Row="2"
                           Content="템플릿 편집" 
                           Command="{Binding NavigateToTemplateEditCommand}"
                           Style="{StaticResource CleanButton}"
                           Background="#6A1B9A"
                           Height="85"
                           HorizontalAlignment="Stretch"/>
                    <Button Grid.Row="4"
                           Content="문항 배점 입력" 
                           Command="{Binding NavigateToScoringRuleCommand}"
                           Style="{StaticResource CleanButton}"
                           Background="#E65100"
                           Height="85"
                           HorizontalAlignment="Stretch"/>
                </Grid>

                <!-- 2열: 면접 준비 -->
                <Grid Grid.Column="2" Grid.Row="0" Grid.RowSpan="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                              Text="면접 준비" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="#212121"
                              TextOptions.TextRenderingMode="ClearType"
                              Margin="0,0,0,10"/>
                    <Button Grid.Row="2"
                           Content="수험생 명렬 관리" 
                           Command="{Binding NavigateToRegistryCommand}"
                           Style="{StaticResource CleanButton}"
                           Background="#2E7D32"
                           MinHeight="180"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"/>
                </Grid>

                <!-- 3열: 마킹 리딩 -->
                <Grid Grid.Column="4" Grid.Row="0" Grid.RowSpan="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                              Text="OMR 스캔" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="#212121"
                              TextOptions.TextRenderingMode="ClearType"
                              Margin="0,0,0,10"/>
                    <Button Grid.Row="2"
                           Content="마킹 리딩" 
                           Command="{Binding NavigateToMarkingCommand}"
                           Style="{StaticResource CleanButton}"
                           Background="#1565C0"
                           MinHeight="180"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"/>
                </Grid>

                <!-- 4열: 성적 처리 -->
                <Grid Grid.Column="6" Grid.Row="0" Grid.RowSpan="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                              Text="성적 처리" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="#212121"
                              TextOptions.TextRenderingMode="ClearType"
                              Margin="0,0,0,10"/>
                    <Button Grid.Row="2"
                           Content="채점 및 성적 처리" 
                           Command="{Binding NavigateToGradingCommand}"
                           Style="{StaticResource CleanButton}"
                           Background="#C62828"
                           Height="85"
                           HorizontalAlignment="Stretch"/>
                    <Button Grid.Row="4"
                           Content="수기 검산" 
                           Command="{Binding NavigateToManualVerificationCommand}"
                           Style="{StaticResource CleanButton}"
                           Background="#424242"
                           Height="85"
                           HorizontalAlignment="Stretch"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>








