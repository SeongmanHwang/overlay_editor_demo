<UserControl x:Class="SimpleOverlayEditor.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <Border Grid.Row="0" 
                Background="#1565C0"
                Padding="30,25"
                BorderThickness="0,0,0,2"
                BorderBrush="#0D47A1">
            <StackPanel>
                <TextBlock Text="자기주도학습전형 성적 처리 프로그램" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"
                          TextOptions.TextRenderingMode="ClearType"
                          TextOptions.TextFormattingMode="Display"/>
            </StackPanel>
        </Border>

        <!-- 메인 콘텐츠 -->
        <Grid Grid.Row="1" 
              VerticalAlignment="Top" 
              HorizontalAlignment="Center"
              Margin="40,30">
            <StackPanel VerticalAlignment="Top" 
                       HorizontalAlignment="Center"
                       MaxWidth="1100">
                
                <!-- 첫 번째 행: 초기 설정 -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="초기 설정" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="#212121"
                              TextOptions.TextRenderingMode="ClearType"
                              Margin="0,0,0,10"/>
                    <UniformGrid Columns="2" Rows="1" HorizontalAlignment="Stretch">
                        <Button Content="템플릿 편집" 
                               Command="{Binding NavigateToTemplateEditCommand}"
                               Style="{StaticResource CleanButton}"
                               Background="#6A1B9A"
                               Margin="0,0,10,0"
                               Height="85"/>
                        <Button Content="문항 배점 입력" 
                               Command="{Binding NavigateToScoringRuleCommand}"
                               Style="{StaticResource CleanButton}"
                               Background="#E65100"
                               Margin="10,0,0,0"
                               Height="85"/>
                    </UniformGrid>
                </StackPanel>

                <!-- 두 번째 행: 면접 준비 -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="면접 준비" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="#212121"
                              TextOptions.TextRenderingMode="ClearType"
                              Margin="0,0,0,10"/>
                    <Button Content="수험생 명렬 관리" 
                           Command="{Binding NavigateToRegistryCommand}"
                           Style="{StaticResource CleanButton}"
                           Background="#2E7D32"
                           Height="85"
                           HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- 세 번째 행: 마킹 리딩 -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="마킹 리딩" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="#212121"
                              TextOptions.TextRenderingMode="ClearType"
                              Margin="0,0,0,10"/>
                    <Button Content="마킹 리딩" 
                           Command="{Binding NavigateToMarkingCommand}"
                           Style="{StaticResource CleanButton}"
                           Background="#1565C0"
                           Height="85"
                           HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- 네 번째 행: 성적 처리 -->
                <StackPanel Margin="0,0,0,0">
                    <TextBlock Text="성적 처리" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="#212121"
                              TextOptions.TextRenderingMode="ClearType"
                              Margin="0,0,0,10"/>
                    <UniformGrid Columns="2" Rows="1" HorizontalAlignment="Stretch">
                        <Button Content="채점 및 성적 처리" 
                               Command="{Binding NavigateToGradingCommand}"
                               Style="{StaticResource CleanButton}"
                               Background="#C62828"
                               Margin="0,0,10,0"
                               Height="85"/>
                        <Button Content="수기 검산" 
                               Command="{Binding NavigateToManualVerificationCommand}"
                               Style="{StaticResource CleanButton}"
                               Background="#424242"
                               Margin="10,0,0,0"
                               Height="85"/>
                    </UniformGrid>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>








