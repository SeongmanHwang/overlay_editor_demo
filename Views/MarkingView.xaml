<UserControl x:Class="SimpleOverlayEditor.Views.MarkingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SimpleOverlayEditor.ViewModels"
             xmlns:models="clr-namespace:SimpleOverlayEditor.Models"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>  <!-- 왼쪽: 문서 목록 및 설정 -->
            <ColumnDefinition Width="*"/>    <!-- 중앙: 결과 표시 -->
            <ColumnDefinition Width="300"/>  <!-- 오른쪽: 마킹 결과 상세 -->
        </Grid.ColumnDefinitions>

        <!-- 왼쪽: 문서 목록 및 설정 -->
        <DockPanel Grid.Column="0" Background="#F5F5F5">
            <StackPanel DockPanel.Dock="Top" Margin="10">
                <TextBlock Text="마킹 감지" 
                          FontWeight="Bold" 
                          FontSize="16"
                          Margin="0,10,0,15"/>
                <Button Content="홈으로" 
                       Command="{Binding Navigation.NavigateToHomeCommand}"
                       Margin="0,0,0,10"
                       Padding="8,5"
                       Background="#757575"
                       Foreground="White"/>
                <Button Content="폴더 로드" 
                       Command="{Binding LoadFolderCommand}"
                       Margin="0,0,0,10"
                       Padding="8,5"
                       Background="#2196F3"
                       Foreground="White"
                       FontWeight="Bold"/>
                <Separator Margin="0,10"/>
            </StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <GroupBox Header="설정" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock Text="임계값:" Margin="0,5,0,2" FontWeight="Bold"/>
                            <TextBox Text="{Binding MarkingThreshold, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="0,0,0,10"/>
                            <Button Content="현재 문서 감지" 
                                   Command="{Binding DetectMarkingsCommand}"
                                   Margin="0,0,0,5"
                                   Padding="6,3"
                                   Background="#2196F3"
                                   Foreground="White"
                                   FontWeight="Bold"/>
                            <Button Content="전체 문서 감지" 
                                   Command="{Binding DetectAllMarkingsCommand}"
                                   Margin="0,0,0,10"
                                   Padding="6,3"
                                   Background="#4CAF50"
                                   Foreground="White"
                                   FontWeight="Bold"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Margin="0,0,0,10">
                        <GroupBox.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="문서 목록"/>
                                <TextBlock Text="{Binding DocumentCount, StringFormat=' (총 {0}개)'}" 
                                          Margin="5,0,0,0"
                                          Foreground="#666"
                                          FontWeight="Normal"/>
                            </StackPanel>
                        </GroupBox.Header>
                        <ListBox ItemsSource="{Binding Documents}"
                                SelectedItem="{Binding SelectedDocument}"
                                MaxHeight="300">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding SourcePath, Converter={StaticResource FileNameConverter}}" 
                                              TextWrapping="Wrap"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>

        <!-- 중앙: 오버레이 이미지 표시 -->
        <DockPanel Grid.Column="1" Background="#E0E0E0">
            <StackPanel DockPanel.Dock="Top" Margin="10">
                <TextBlock Text="오버레이 이미지" 
                          FontWeight="Bold" 
                          FontSize="18"
                          Margin="0,10,0,10"/>
            </StackPanel>
            <ScrollViewer x:Name="ImageScrollViewer"
                         HorizontalScrollBarVisibility="Auto"
                         VerticalScrollBarVisibility="Auto"
                         Background="#E0E0E0"
                         VerticalContentAlignment="Top">
                <Grid>
                    <!-- 안내 메시지 (마킹 감지 전) -->
                    <TextBlock Text="이미지를 선택하고 마킹 감지를 실행하세요." 
                              FontSize="14" 
                              Foreground="#666"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              TextAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DisplayImage}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <!-- 오버레이 이미지 (마킹 감지 후) -->
                    <Canvas x:Name="ImageCanvas" 
                           Background="White"
                           SizeChanged="ImageCanvas_SizeChanged"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left">
                        <Image x:Name="SourceImage" 
                              Stretch="Uniform"
                              RenderOptions.BitmapScalingMode="HighQuality"
                              IsHitTestVisible="False">
                        </Image>
                    </Canvas>
                </Grid>
            </ScrollViewer>
        </DockPanel>

        <!-- 오른쪽: 마킹 감지 결과 및 상세 정보 -->
        <DockPanel Grid.Column="2" Background="#F5F5F5">
            <TextBlock DockPanel.Dock="Top" 
                      Text="마킹 감지 결과" 
                      FontWeight="Bold" 
                      FontSize="14"
                      Margin="10,10,10,5"
                      Padding="5"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <!-- 선택된 문서 정보 -->
                    <GroupBox Header="선택된 문서" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <!-- 안내 메시지 (문서 미선택) -->
                            <TextBlock Text="문서를 선택하세요." 
                                      FontSize="11" 
                                      Foreground="#666"
                                      TextWrapping="Wrap"
                                      Margin="0,5"
                                      TextAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedDocument, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <!-- 문서 정보 (문서 선택 시) -->
                            <StackPanel IsEnabled="{Binding SelectedDocument, Converter={StaticResource NullToBoolConverter}}">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedDocument, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Margin="0,5,0,2" TextWrapping="Wrap">
                                    <Run Text="파일명:" FontWeight="Bold"/>
                                    <LineBreak/>
                                    <Run Text="{Binding SelectedDocument.SourcePath, Converter={StaticResource FileNameConverter}}" 
                                         FontSize="11"/>
                                </TextBlock>
                                <TextBlock Margin="0,10,0,2">
                                    <Run Text="너비:" FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedDocument.ImageWidth}"/> <Run Text="px"/>
                                </TextBlock>
                                <TextBlock Margin="0,5,0,2">
                                    <Run Text="높이:" FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedDocument.ImageHeight}"/> <Run Text="px"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- 마킹 감지 결과 테이블 -->
                    <GroupBox Header="마킹 감지 결과" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock Text="이미지를 선택하고 마킹 감지를 실행하세요." 
                                      FontSize="11" 
                                      Foreground="#666"
                                      TextWrapping="Wrap"
                                      Margin="0,5"
                                      TextAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentMarkingResults, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            
                            <DataGrid ItemsSource="{Binding CurrentMarkingResults}"
                                     AutoGenerateColumns="False"
                                     CanUserAddRows="False"
                                     CanUserDeleteRows="False"
                                     HeadersVisibility="Column"
                                     MaxHeight="300">
                                <DataGrid.Style>
                                    <Style TargetType="DataGrid">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentMarkingResults, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.Style>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="영역" Binding="{Binding ScoringAreaId}" Width="50"/>
                                    <DataGridTextColumn Header="마킹" Binding="{Binding IsMarked}" Width="60">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMarked}" Value="True">
                                                        <Setter Property="Foreground" Value="Blue"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsMarked}" Value="False">
                                                        <Setter Property="Foreground" Value="Red"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="밝기" Binding="{Binding AverageBrightness, StringFormat=F1}" Width="60"/>
                                    <DataGridTextColumn Header="임계값" Binding="{Binding Threshold, StringFormat=F1}" Width="60"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </GroupBox>

                    <!-- 결과 요약 통계 -->
                    <GroupBox Header="결과 요약" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock TextWrapping="Wrap" Margin="0,5,0,2">
                                <Run Text="총 영역:" FontWeight="Bold"/>
                                <Run Text="{Binding CurrentMarkingResults.Count, Mode=OneWay, TargetNullValue=0}"/> <Run Text="개"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,5,0,2">
                                <Run Text="마킹 감지:" FontWeight="Bold" Foreground="Blue"/>
                                <Run Text="{Binding CurrentMarkingResults, Converter={StaticResource MarkedCountConverter}}" Foreground="Blue"/> <Run Text="개"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,5,0,2">
                                <Run Text="미마킹:" FontWeight="Bold" Foreground="Red"/>
                                <Run Text="{Binding CurrentMarkingResults, Converter={StaticResource UnmarkedCountConverter}}" Foreground="Red"/> <Run Text="개"/>
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>

                    <!-- 바코드 디코딩 결과 -->
                    <GroupBox Header="바코드 디코딩 결과" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <!-- 안내 메시지 (바코드 디코딩 전) -->
                            <TextBlock Text="바코드 디코딩을 실행하세요." 
                                      FontSize="11" 
                                      Foreground="#666"
                                      TextWrapping="Wrap"
                                      Margin="0,5"
                                      TextAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentBarcodeResults, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            
                            <!-- 바코드 결과 DataGrid -->
                            <DataGrid ItemsSource="{Binding CurrentBarcodeResults}"
                                     AutoGenerateColumns="False"
                                     CanUserAddRows="False"
                                     CanUserDeleteRows="False"
                                     HeadersVisibility="Column"
                                     MaxHeight="200">
                                <DataGrid.Style>
                                    <Style TargetType="DataGrid">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentBarcodeResults, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.Style>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="영역" Binding="{Binding BarcodeAreaId}" Width="50"/>
                                    <DataGridTextColumn Header="성공" Binding="{Binding Success}" Width="50">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Success}" Value="True">
                                                        <Setter Property="Foreground" Value="Green"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Success}" Value="False">
                                                        <Setter Property="Foreground" Value="Red"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="바코드" Binding="{Binding DecodedText}" Width="*"/>
                                    <DataGridTextColumn Header="포맷" Binding="{Binding Format}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </GroupBox>

                    <!-- 바코드 요약 -->
                    <GroupBox Header="바코드 요약" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock TextWrapping="Wrap" Margin="0,5,0,2">
                                <Run Text="총 영역:" FontWeight="Bold"/>
                                <Run Text="{Binding CurrentBarcodeResults.Count, Mode=OneWay, TargetNullValue=0}"/> <Run Text="개"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,5,0,2">
                                <Run Text="성공:" FontWeight="Bold" Foreground="Green"/>
                                <Run Text="{Binding CurrentBarcodeResults, Converter={StaticResource BarcodeSuccessCountConverter}}" Foreground="Green"/> <Run Text="개"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,5,0,2">
                                <Run Text="실패:" FontWeight="Bold" Foreground="Red"/>
                                <Run Text="{Binding CurrentBarcodeResults, Converter={StaticResource BarcodeFailureCountConverter}}" Foreground="Red"/> <Run Text="개"/>
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>

                    <!-- 채점 영역 정보 -->
                    <GroupBox Header="채점 영역 정보" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#666">
                                <Run Text="• 녹색: 타이밍 마크"/>
                                <LineBreak/>
                                <Run Text="• 빨간색: 채점 영역 (미마킹)"/>
                                <LineBreak/>
                                <Run Text="• 파란색: 채점 영역 (마킹 감지)"/>
                                <LineBreak/>
                                <Run Text="• 주황색: 바코드 영역"/>
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>

