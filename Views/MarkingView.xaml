<UserControl x:Class="SimpleOverlayEditor.Views.MarkingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SimpleOverlayEditor.ViewModels"
             xmlns:models="clr-namespace:SimpleOverlayEditor.Models"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>  <!-- 상단 3열 구조 -->
            <RowDefinition Height="5"/>  <!-- Splitter -->
            <RowDefinition Height="200" MinHeight="100"/> <!-- 하단 OMR 결과 테이블 -->
        </Grid.RowDefinitions>
        
        <!-- 기존 3열 구조 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="200"/>  <!-- 왼쪽: 마킹 결과 상세 -->
                <ColumnDefinition Width="5"/>  <!-- Splitter -->
                <ColumnDefinition Width="*"/>    <!-- 중앙: 결과 표시 -->
                <ColumnDefinition Width="5"/>  <!-- Splitter -->
                <ColumnDefinition Width="200" MinWidth="150"/>  <!-- 오른쪽: 문서 목록 및 설정 -->
            </Grid.ColumnDefinitions>

            <!-- 왼쪽: 마킹 리딩 결과 및 상세 정보 -->
            <DockPanel Grid.Column="0" Background="#F5F5F5">
            <TextBlock DockPanel.Dock="Top" 
                      Text="마킹 리딩 결과" 
                      FontWeight="Bold" 
                      FontSize="14"
                      Margin="10,10,10,5"
                      Padding="5"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <!-- 선택된 문서 정보 -->
                    <GroupBox Header="선택된 문서" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <!-- 안내 메시지 (문서 미선택) -->
                            <TextBlock Text="문서를 선택하세요." 
                                      FontSize="11" 
                                      Foreground="#666"
                                      TextWrapping="Wrap"
                                      Margin="0,5"
                                      TextAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedDocument, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <!-- 문서 정보 (문서 선택 시) -->
                            <StackPanel IsEnabled="{Binding SelectedDocument, Converter={StaticResource NullToBoolConverter}}">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedDocument, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Margin="0,5,0,2" TextWrapping="Wrap">
                                    <Run Text="파일명:" FontWeight="Bold"/>
                                    <LineBreak/>
                                    <Run Text="{Binding SelectedDocument.SourcePath, Converter={StaticResource FileNameConverter}}" 
                                         FontSize="11"/>
                                </TextBlock>
                                <TextBlock Margin="0,10,0,2">
                                    <Run Text="너비:" FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedDocument.ImageWidth}"/> <Run Text="px"/>
                                </TextBlock>
                                <TextBlock Margin="0,5,0,2">
                                    <Run Text="높이:" FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedDocument.ImageHeight}"/> <Run Text="px"/>
                                </TextBlock>
                                
                                <!-- 정렬 정보 -->
                                <Separator Margin="0,10,0,5"/>
                                <TextBlock Text="정렬 정보" FontWeight="Bold" Margin="0,5,0,2"/>
                                
                                <!-- 정렬 상태 -->
                                <TextBlock Margin="0,5,0,2">
                                    <Run Text="정렬 상태:" FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedDocument.AlignmentInfo.Success, Converter={StaticResource BoolToYesNoConverter}}">
                                        <Run.Style>
                                            <Style TargetType="Run">
                                                <Setter Property="Foreground" Value="#666666"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedDocument.AlignmentInfo.Success}" Value="True">
                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedDocument.AlignmentInfo.Success}" Value="False">
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Run.Style>
                                    </Run>
                                </TextBlock>
                                
                                <!-- 신뢰도 (정렬 성공 시에만 표시) -->
                                <TextBlock Margin="0,5,0,2" 
                                          Visibility="{Binding SelectedDocument.AlignmentInfo.Success, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Run Text="신뢰도:" FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedDocument.AlignmentInfo.Confidence, StringFormat=P0}">
                                        <Run.Style>
                                            <Style TargetType="Run">
                                                <Setter Property="Foreground" Value="#F44336"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedDocument.AlignmentInfo.Confidence, Converter={StaticResource DoubleToBoolConverter}, ConverterParameter=0.8}" Value="True">
                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedDocument.AlignmentInfo.Confidence, Converter={StaticResource DoubleToBoolConverter}, ConverterParameter=0.7}" Value="True">
                                                        <Setter Property="Foreground" Value="#FF9800"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Run.Style>
                                    </Run>
                                    <Run Text=" ("/>
                                    <Run Text="{Binding SelectedDocument.AlignmentInfo.Confidence, StringFormat=F2}"/>
                                    <Run Text=")"/>
                                </TextBlock>
                                
                                <!-- 회전 (정렬 성공 시에만 표시) -->
                                <TextBlock Margin="0,5,0,2" 
                                          Visibility="{Binding SelectedDocument.AlignmentInfo.Success, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Run Text="회전:" FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedDocument.AlignmentInfo.Rotation, StringFormat=F2}"/> <Run Text="°"/>
                                </TextBlock>
                                
                                <!-- 스케일 (정렬 성공 시에만 표시) -->
                                <TextBlock Margin="0,5,0,2" 
                                          Visibility="{Binding SelectedDocument.AlignmentInfo.Success, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Run Text="스케일:" FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedDocument.AlignmentInfo.ScaleX, StringFormat=F3}"/> <Run Text=" x "/>
                                    <Run Text="{Binding SelectedDocument.AlignmentInfo.ScaleY, StringFormat=F3}"/>
                                </TextBlock>
                                
                                <!-- 이동 (정렬 성공 시에만 표시) -->
                                <TextBlock Margin="0,5,0,2" 
                                          Visibility="{Binding SelectedDocument.AlignmentInfo.Success, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Run Text="이동:" FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedDocument.AlignmentInfo.TranslationX, StringFormat=F1}"/> <Run Text=", "/>
                                    <Run Text="{Binding SelectedDocument.AlignmentInfo.TranslationY, StringFormat=F1}"/> <Run Text="px"/>
                                </TextBlock>
                                
                                <!-- 정렬 안내 (정렬 정보가 없을 때) -->
                                <TextBlock Text="정렬 정보가 없습니다." 
                                          FontSize="10" 
                                          Foreground="#999"
                                          Margin="0,5,0,2"
                                          TextWrapping="Wrap"
                                          Visibility="{Binding SelectedDocument.AlignmentInfo, Converter={StaticResource InverseNullToVisibilityConverter}}"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- 마킹 리딩 결과 테이블 -->
                    <GroupBox Header="마킹 리딩 결과" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock Text="이미지를 선택하고 마킹 리딩을 실행하세요." 
                                      FontSize="11" 
                                      Foreground="#666"
                                      TextWrapping="Wrap"
                                      Margin="0,5"
                                      TextAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentMarkingResults, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            
                            <DataGrid ItemsSource="{Binding CurrentMarkingResults}"
                                     AutoGenerateColumns="False"
                                     CanUserAddRows="False"
                                     CanUserDeleteRows="False"
                                     HeadersVisibility="Column"
                                     MaxHeight="300">
                                <DataGrid.Style>
                                    <Style TargetType="DataGrid">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentMarkingResults, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.Style>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="문항" Binding="{Binding QuestionNumber}" Width="50">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="선택지" Binding="{Binding OptionNumber}" Width="50">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="마킹" Binding="{Binding IsMarked}" Width="60">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMarked}" Value="True">
                                                        <Setter Property="Foreground" Value="Blue"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsMarked}" Value="False">
                                                        <Setter Property="Foreground" Value="Red"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="밝기" Binding="{Binding AverageBrightness, StringFormat=F1}" Width="60"/>
                                    <DataGridTextColumn Header="임계값" Binding="{Binding Threshold, StringFormat=F1}" Width="60"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </GroupBox>

                    <!-- 결과 요약 통계 -->
                    <GroupBox Header="결과 요약" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock TextWrapping="Wrap" Margin="0,5,0,2">
                                <Run Text="총 영역:" FontWeight="Bold"/>
                                <Run Text="{Binding CurrentMarkingResults.Count, Mode=OneWay, TargetNullValue=0}"/> <Run Text="개"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,5,0,2">
                                <Run Text="마킹 리딩:" FontWeight="Bold" Foreground="Blue"/>
                                <Run Text="{Binding CurrentMarkingResults, Converter={StaticResource MarkedCountConverter}}" Foreground="Blue"/> <Run Text="개"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,5,0,2">
                                <Run Text="미마킹:" FontWeight="Bold" Foreground="Red"/>
                                <Run Text="{Binding CurrentMarkingResults, Converter={StaticResource UnmarkedCountConverter}}" Foreground="Red"/> <Run Text="개"/>
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>

                    <!-- 바코드 디코딩 결과 -->
                    <GroupBox Header="바코드 디코딩 결과" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <!-- 안내 메시지 (바코드 디코딩 전) -->
                            <TextBlock Text="바코드 디코딩을 실행하세요." 
                                      FontSize="11" 
                                      Foreground="#666"
                                      TextWrapping="Wrap"
                                      Margin="0,5"
                                      TextAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentBarcodeResults, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            
                            <!-- 바코드 결과 DataGrid -->
                            <DataGrid ItemsSource="{Binding CurrentBarcodeResults}"
                                     AutoGenerateColumns="False"
                                     CanUserAddRows="False"
                                     CanUserDeleteRows="False"
                                     HeadersVisibility="Column"
                                     MaxHeight="200">
                                <DataGrid.Style>
                                    <Style TargetType="DataGrid">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentBarcodeResults, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.Style>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="영역" Binding="{Binding BarcodeAreaId}" Width="50"/>
                                    <DataGridTextColumn Header="성공" Binding="{Binding Success}" Width="50">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Success}" Value="True">
                                                        <Setter Property="Foreground" Value="Green"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Success}" Value="False">
                                                        <Setter Property="Foreground" Value="Red"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="바코드" Binding="{Binding DecodedText}" Width="*"/>
                                    <DataGridTextColumn Header="포맷" Binding="{Binding Format}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </GroupBox>

                    <!-- 바코드 요약 -->
                    <GroupBox Header="바코드 요약" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock TextWrapping="Wrap" Margin="0,5,0,2">
                                <Run Text="총 영역:" FontWeight="Bold"/>
                                <Run Text="{Binding CurrentBarcodeResults.Count, Mode=OneWay, TargetNullValue=0}"/> <Run Text="개"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,5,0,2">
                                <Run Text="성공:" FontWeight="Bold" Foreground="Green"/>
                                <Run Text="{Binding CurrentBarcodeResults, Converter={StaticResource BarcodeSuccessCountConverter}}" Foreground="Green"/> <Run Text="개"/>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,5,0,2">
                                <Run Text="실패:" FontWeight="Bold" Foreground="Red"/>
                                <Run Text="{Binding CurrentBarcodeResults, Converter={StaticResource BarcodeFailureCountConverter}}" Foreground="Red"/> <Run Text="개"/>
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>

                    <!-- 채점 영역 정보 -->
                    <GroupBox Header="채점 영역 정보" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#666">
                                <Run Text="• 녹색: 타이밍 마크"/>
                                <LineBreak/>
                                <Run Text="• 빨간색: 채점 영역 (미마킹)"/>
                                <LineBreak/>
                                <Run Text="• 파란색: 채점 영역 (마킹 리딩)"/>
                                <LineBreak/>
                                <Run Text="• 주황색: 바코드 영역"/>
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>

            <!-- 왼쪽 Splitter -->
            <GridSplitter Grid.Column="1"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Width="5"
                         Background="#E0E0E0"
                         ShowsPreview="False"
                         ResizeDirection="Columns"/>

            <!-- 중앙: 오버레이 이미지 표시 -->
            <DockPanel Grid.Column="2" Background="#E0E0E0">
            <ScrollViewer x:Name="ImageScrollViewer"
                         HorizontalScrollBarVisibility="Auto"
                         VerticalScrollBarVisibility="Auto"
                         Background="#E0E0E0"
                         VerticalContentAlignment="Top"
                         PreviewMouseWheel="ImageScrollViewer_PreviewMouseWheel">
                <Grid>
                    <!-- 안내 메시지 (마킹 리딩 전) -->
                    <TextBlock Text="이미지를 선택하고 마킹 리딩을 실행하세요." 
                              FontSize="14" 
                              Foreground="#666"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              TextAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DisplayImage}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <!-- 오버레이 이미지 (마킹 리딩 후) -->
                    <Canvas x:Name="ImageCanvas" 
                           Background="White"
                           SizeChanged="ImageCanvas_SizeChanged"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left">
                        <Image x:Name="SourceImage" 
                              Stretch="Uniform"
                              RenderOptions.BitmapScalingMode="HighQuality"
                              IsHitTestVisible="False">
                        </Image>
                    </Canvas>
                </Grid>
            </ScrollViewer>
        </DockPanel>

            <!-- 오른쪽 Splitter -->
            <GridSplitter Grid.Column="3"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Width="5"
                         Background="#E0E0E0"
                         ShowsPreview="False"
                         ResizeDirection="Columns"/>

            <!-- 오른쪽: 문서 목록 및 설정 -->
            <DockPanel Grid.Column="4" Background="#F5F5F5">
            <StackPanel DockPanel.Dock="Top" Margin="10">
                <TextBlock Text="마킹 리딩" 
                          FontWeight="Bold" 
                          FontSize="16"
                          Margin="0,10,0,15"/>
                <Button Content="홈으로" 
                       Command="{Binding Navigation.NavigateToHomeCommand}"
                       Style="{StaticResource CleanButton}"
                       Background="#616161"
                       Margin="0,0,0,10"/>
                <Button Content="폴더 로드" 
                       Command="{Binding LoadFolderCommand}"
                       Style="{StaticResource CleanButton}"
                       Background="#1976D2"
                       Margin="0,0,0,10"/>
                <Separator Margin="0,10"/>
            </StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <GroupBox Header="설정" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock Text="임계값:" Margin="0,5,0,2" FontWeight="Bold"/>
                            <TextBox Text="{Binding MarkingThreshold, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="0,0,0,10"/>
                            <Button Content="현재 문서 재리딩" 
                                   Command="{Binding DetectMarkingsCommand}"
                                   Style="{StaticResource CleanButtonSmall}"
                                   Background="#1976D2"
                                   Margin="0,0,0,5"/>
                            <Button Content="전체 문서 리딩" 
                                   Command="{Binding DetectAllMarkingsCommand}"
                                   Style="{StaticResource CleanButtonSmall}"
                                   Background="#4CAF50"
                                   Margin="0,0,0,5"/>
                            <Button Content="미리딩만 전체 리딩" 
                                   Command="{Binding DetectUnreadMarkingsCommand}"
                                   Style="{StaticResource CleanButtonSmall}"
                                   Background="#43A047"
                                   Margin="0,0,0,10"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
        </Grid>

        <!-- 수평 Splitter -->
        <GridSplitter Grid.Row="1"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     Height="5"
                     Background="#E0E0E0"
                     ShowsPreview="False"
                     ResizeDirection="Rows"/>

        <!-- OMR 결과 테이블 영역 -->
        <GroupBox Grid.Row="2" Header="OMR 결과 요약" Margin="5" Padding="5" MinHeight="100">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 요약 통계, 필터 버튼 및 CSV 내보내기 -->
                <Grid Grid.Row="0" Margin="0,0,0,10" 
                      Visibility="{Binding SheetResults, Converter={StaticResource NullToBoolConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 요약 통계 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="총 " FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SheetResults.Count, FallbackValue=0}" 
                                  FontWeight="Bold" 
                                  Foreground="Blue"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="개 용지 중 " FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ErrorCount, FallbackValue=0}" 
                                  FontWeight="Bold" 
                                  Foreground="#D32F2F"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="개 오류" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Text=", " FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,3,0"/>
                        <TextBlock Text="{Binding DuplicateCount, FallbackValue=0}" 
                                  FontWeight="Bold" 
                                  Foreground="#F57C00"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="개 ID 중복" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Text=", " FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,3,0"/>
                        <TextBlock Text="{Binding NullCombinedIdCount, FallbackValue=0}" 
                                  FontWeight="Bold" 
                                  Foreground="#E64A19"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="개 결합ID 없음" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    
                        <TextBlock Text=", " FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,3,0"/>
                        <TextBlock Text="{Binding ReadyForReadingCount, FallbackValue=0}"
                                  FontWeight="Bold"
                                  Foreground="#2E7D32"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="개 Ready" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    
                    </StackPanel>
                    
                    <!-- 필터 버튼 (중앙) -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="필터: " VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                        <RadioButton Content="전체" 
                                    IsChecked="{Binding FilterMode, Converter={StaticResource StringEqualsConverter}, ConverterParameter=All}"
                                    Command="{Binding SetFilterModeCommand}" 
                                    CommandParameter="All"
                                    Margin="5,0"
                                    GroupName="FilterMode"
                                    VerticalAlignment="Center"/>
                        <RadioButton Content="단순 오류만" 
                                    IsChecked="{Binding FilterMode, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Errors}"
                                    Command="{Binding SetFilterModeCommand}" 
                                    CommandParameter="Errors"
                                    Margin="5,0"
                                    GroupName="FilterMode"
                                    VerticalAlignment="Center"/>
                        <RadioButton Content="ID 중복만" 
                                    IsChecked="{Binding FilterMode, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Duplicates}"
                                    Command="{Binding SetFilterModeCommand}" 
                                    CommandParameter="Duplicates"
                                    Margin="5,0"
                                    GroupName="FilterMode"
                                    VerticalAlignment="Center"/>
                        
                        <!-- 시각/실/순 필터 추가 -->
                        <Rectangle Width="1" Height="20" Fill="#E0E0E0" Margin="15,5" VerticalAlignment="Center"/>
                        
                        <TextBlock Text="시각:" VerticalAlignment="Center" Margin="5,0,3,0" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding SessionFilterOptions}"
                                  SelectedItem="{Binding SelectedSessionFilter, UpdateSourceTrigger=PropertyChanged}"
                                  Width="80"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                        
                        <TextBlock Text="실:" VerticalAlignment="Center" Margin="5,0,3,0" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding RoomFilterOptions}"
                                  SelectedItem="{Binding SelectedRoomFilter, UpdateSourceTrigger=PropertyChanged}"
                                  Width="80"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                        
                        <TextBlock Text="순:" VerticalAlignment="Center" Margin="5,0,3,0" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding OrderFilterOptions}"
                                  SelectedItem="{Binding SelectedOrderFilter, UpdateSourceTrigger=PropertyChanged}"
                                  Width="80"
                                  VerticalAlignment="Center"
                                  Margin="0,0,5,0"/>

                        <!-- 필터 초기화 (작고 평평하게, 필터 옆에 붙임) -->
                        <Button Content="초기화"
                                Command="{Binding ResetFiltersCommand}"
                                FontSize="11"
                                Padding="6,2"
                                Margin="6,0,0,0"
                                Background="Transparent"
                                BorderBrush="#C0C0C0"
                                BorderThickness="1"
                                Foreground="#666"
                                VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- 우측 버튼 영역 -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Excel 내보내기" 
                                Command="{Binding ExportToXlsxCommand}" 
                                Padding="10,5"
                                Background="#4CAF50"
                                Foreground="White"
                                FontWeight="Bold"
                                MinWidth="120"
                                VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
                
                <!-- 안내 메시지 (데이터 없을 때) -->
                <TextBlock Grid.Row="1"
                          Text="마킹 리딩을 실행하면 결과가 여기에 표시됩니다." 
                          FontSize="12" 
                          Foreground="#666"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          TextAlignment="Center"
                          Margin="10">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SheetResults, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SheetResults.Count, FallbackValue=0}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                
                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding FilteredSheetResults}" 
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          SelectionMode="Extended"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#F5F5F5"
                          SelectionChanged="DataGrid_SelectionChanged"
                          Sorting="OmrDataGrid_Sorting">
                    <DataGrid.Style>
                        <Style TargetType="DataGrid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SheetResults, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SheetResults.Count, FallbackValue=0}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Style>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="파일명" Binding="{Binding ImageFileName}" SortMemberPath="ImageFileName" Width="150" IsReadOnly="True"/>
                        <DataGridTextColumn Header="수험번호" Binding="{Binding StudentId}" SortMemberPath="StudentId" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="시각" Binding="{Binding Session}" SortMemberPath="Session" Width="50" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="실" Binding="{Binding RoomNumber}" SortMemberPath="RoomNumber" Width="50" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="순" Binding="{Binding OrderNumber}" SortMemberPath="OrderNumber" Width="50" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="면접번호" Binding="{Binding InterviewId}" SortMemberPath="InterviewId" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="결합ID" Binding="{Binding CombinedId}" SortMemberPath="CombinedId" Width="120" IsReadOnly="True"/>
                        <DataGridTextColumn Header="문항1" Binding="{Binding Question1Marking}" SortMemberPath="Question1Marking" Width="60" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="문항2" Binding="{Binding Question2Marking}" SortMemberPath="Question2Marking" Width="60" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="문항3" Binding="{Binding Question3Marking}" SortMemberPath="Question3Marking" Width="60" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="문항4" Binding="{Binding Question4Marking}" SortMemberPath="Question4Marking" Width="60" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridCheckBoxColumn Header="오류" Binding="{Binding IsSimpleError}" SortMemberPath="IsSimpleError" Width="60" IsReadOnly="True"/>
                        <DataGridCheckBoxColumn Header="ID 중복" Binding="{Binding IsDuplicate}" SortMemberPath="IsDuplicate" Width="60" IsReadOnly="True"/>
                        <DataGridTextColumn Header="오류 메시지" Binding="{Binding ErrorMessage}" SortMemberPath="ErrorMessage" Width="*" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="ToolTip" Value="{Binding ErrorMessage}"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <!-- 삭제 버튼 (오른쪽 끝) -->
                        <DataGridTemplateColumn Header="삭제" Width="60">
                            <DataGridTemplateColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTemplateColumn.HeaderStyle>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="삭제"
                                            Click="DeleteButton_Click"
                                            Tag="{Binding ImageId}"
                                            Padding="5,2"
                                            FontSize="11"
                                            Background="#D32F2F"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            ToolTip="이 항목을 삭제합니다"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    
                    <!-- 오류 유형별 색상 구분 -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <!-- 중복 + 오류 (복합 오류 - 가장 심각) -->
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsDuplicate}" Value="True"/>
                                        <Condition Binding="{Binding HasErrors}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Background" Value="#FFE082"/>
                                </MultiDataTrigger>
                                
                                <!-- 중복만 있는 경우 (경고) -->
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsDuplicate}" Value="True"/>
                                        <Condition Binding="{Binding HasErrors}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Background" Value="#FFF3CD"/>
                                </MultiDataTrigger>
                                
                                <!-- 일반 오류 (중간) -->
                                <DataTrigger Binding="{Binding HasErrors}" Value="True">
                                    <Setter Property="Background" Value="#FFCDD2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>

