<UserControl x:Class="SimpleOverlayEditor.Views.TemplateEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SimpleOverlayEditor.ViewModels"
             xmlns:models="clr-namespace:SimpleOverlayEditor.Models"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" MinWidth="180"/>  <!-- 왼쪽: 정보 패널 -->
            <ColumnDefinition Width="5"/>  <!-- Splitter -->
            <ColumnDefinition Width="*"/>    <!-- 중앙: 이미지 뷰 -->
            <ColumnDefinition Width="5"/>  <!-- Splitter -->
            <ColumnDefinition Width="180" MinWidth="150"/>  <!-- 오른쪽: 샘플 이미지 정보 -->
        </Grid.ColumnDefinitions>

        <!-- 왼쪽: 정보 패널 -->
        <DockPanel Grid.Column="0" Background="#F5F5F5">
            <TextBlock DockPanel.Dock="Top" 
                      Text="템플릿 편집" 
                      FontWeight="Bold" 
                      FontSize="14"
                      Margin="10,10,10,5"
                      Padding="5"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <!-- 오버레이 목록 -->
                    <GroupBox Header="오버레이 목록" Margin="0,0,0,10">
                        <DataGrid ItemsSource="{Binding CurrentOverlayCollection}"
                                 SelectedItem="{Binding SelectedOverlay}"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 SelectionMode="Single"
                                 HeadersVisibility="Column"
                                 LoadingRow="DataGrid_LoadingRow"
                                 MaxHeight="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="번호" Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}" Width="50" IsReadOnly="True"/>
                                <DataGridTextColumn Header="타입" Binding="{Binding OverlayType}" Width="80"/>
                                <DataGridTextColumn Header="X" Binding="{Binding X, StringFormat=F1}" Width="50"/>
                                <DataGridTextColumn Header="Y" Binding="{Binding Y, StringFormat=F1}" Width="50"/>
                                <DataGridTextColumn Header="W" Binding="{Binding Width, StringFormat=F1}" Width="50"/>
                                <DataGridTextColumn Header="H" Binding="{Binding Height, StringFormat=F1}" Width="50"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <!-- 선택된 오버레이 상세 편집 -->
                    <GroupBox Header="선택된 사각형 편집" Margin="0,0,0,10">
                        <StackPanel Margin="5" IsEnabled="{Binding SelectedOverlay, Converter={StaticResource NullToBoolConverter}}">
                            <TextBlock Text="X:" Margin="0,5,0,2"/>
                            <TextBox Text="{Binding SelectedOverlay.X, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}"
                                    Margin="0,0,0,5"/>
                            <TextBlock Text="Y:" Margin="0,5,0,2"/>
                            <TextBox Text="{Binding SelectedOverlay.Y, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}"
                                    Margin="0,0,0,5"/>
                            <TextBlock Text="너비 (W):" Margin="0,5,0,2"/>
                            <TextBox Text="{Binding SelectedOverlay.Width, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}"
                                    Margin="0,0,0,5"/>
                            <TextBlock Text="높이 (H):" Margin="0,5,0,2"/>
                            <TextBox Text="{Binding SelectedOverlay.Height, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}"
                                    Margin="0,0,0,5"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>

        <!-- 왼쪽 Splitter -->
        <GridSplitter Grid.Column="1"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     Width="5"
                     Background="#E0E0E0"
                     ShowsPreview="False"
                     ResizeDirection="Columns"/>

        <!-- 중앙: 이미지 뷰 + 도구바 -->
        <DockPanel Grid.Column="2">
            <!-- 상단 도구바 -->
            <StackPanel DockPanel.Dock="Top" 
                       Orientation="Horizontal" 
                       Background="#E8E8E8"
                       Margin="3"
                       Height="36">
                <!-- 오버레이 추가 모드 토글 버튼 -->
                <Button Command="{Binding ToggleAddModeCommand}"
                       Margin="2"
                       Padding="8,4"
                       MinWidth="120"
                       FontSize="11"
                       Foreground="White"
                       Cursor="Hand"
                       VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#CCCCCC"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Setter Property="BorderBrush" Value="#999999"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Setter Property="Content" Value="➕ 추가 모드"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAddMode}" Value="True">
                                    <Setter Property="Background" Value="#4CAF50"/>
                                    <Setter Property="BorderThickness" Value="3"/>
                                    <Setter Property="BorderBrush" Value="#2E7D32"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Content" Value="✅ 추가 모드"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="4" ShadowDepth="2"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Separator Margin="5,0"/>
                <ComboBox SelectedItem="{Binding CurrentOverlayType, Mode=TwoWay}"
                         Margin="3,0"
                         VerticalAlignment="Center"
                         MinWidth="100"
                         FontSize="11">
                    <ComboBox.ItemsSource>
                        <x:Array Type="{x:Type models:OverlayType}">
                            <models:OverlayType>TimingMark</models:OverlayType>
                            <models:OverlayType>ScoringArea</models:OverlayType>
                            <models:OverlayType>BarcodeArea</models:OverlayType>
                        </x:Array>
                    </ComboBox.ItemsSource>
                </ComboBox>
                <Separator Margin="3,0"/>
                <TextBlock Text="문항:" 
                          VerticalAlignment="Center" 
                          Margin="3,0" 
                          FontSize="11"
                          Visibility="{Binding IsQuestionNumberVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <ComboBox SelectedItem="{Binding CurrentQuestionNumber, Mode=TwoWay}"
                         Margin="3,0"
                         VerticalAlignment="Center"
                         MinWidth="60"
                         FontSize="11"
                         Visibility="{Binding IsQuestionNumberVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ComboBox.ItemsSource>
                        <x:Array Type="{x:Type sys:Int32}">
                            <sys:Int32>1</sys:Int32>
                            <sys:Int32>2</sys:Int32>
                            <sys:Int32>3</sys:Int32>
                            <sys:Int32>4</sys:Int32>
                        </x:Array>
                    </ComboBox.ItemsSource>
                </ComboBox>
                <Separator Margin="5,0"/>
                <Button Content="선택 삭제" 
                       Command="{Binding DeleteSelectedCommand}"
                       Margin="2"
                       Padding="6,3"
                       MinWidth="65"
                       FontSize="11"/>
                <Button Content="전체 삭제" 
                       Command="{Binding ClearAllCommand}"
                       Margin="2"
                       Padding="6,3"
                       MinWidth="65"
                       FontSize="11"/>
                <Separator Margin="5,0"/>
                <Button Content="템플릿 저장" 
                       Command="{Binding SaveTemplateCommand}"
                       Margin="2"
                       Padding="6,3"
                       MinWidth="80"
                       Background="#4CAF50"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="11"/>
                <Separator Margin="5,0"/>
                <Button Content="템플릿 내보내기" 
                       Command="{Binding TemplateViewModel.ExportTemplateCommand}"
                       Margin="2"
                       Padding="6,3"
                       MinWidth="100"
                       Background="#2196F3"
                       Foreground="White"
                       FontSize="11"
                       ToolTip="현재 템플릿을 JSON 파일로 내보냅니다."/>
                <Button Content="템플릿 가져오기" 
                       Command="{Binding TemplateViewModel.ImportTemplateCommand}"
                       Margin="2"
                       Padding="6,3"
                       MinWidth="100"
                       Background="#FF9800"
                       Foreground="White"
                       FontSize="11"
                       ToolTip="JSON 파일에서 템플릿을 가져옵니다."/>
            </StackPanel>

            <!-- 이미지 캔버스 -->
            <ScrollViewer x:Name="ImageScrollViewer"
                         HorizontalScrollBarVisibility="Auto"
                         VerticalScrollBarVisibility="Auto"
                         Background="#E0E0E0"
                         VerticalContentAlignment="Top">
                <Canvas x:Name="ImageCanvas" 
                       MouseLeftButtonDown="ImageCanvas_MouseLeftButtonDown"
                       Background="White"
                       SizeChanged="ImageCanvas_SizeChanged"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left">
                    <Image x:Name="SourceImage" 
                          Source="{Binding SelectedDocument.SourcePath}"
                          Stretch="Uniform"
                          RenderOptions.BitmapScalingMode="HighQuality"
                          IsHitTestVisible="False"/>
                    <!-- 오버레이는 코드비하인드에서 동적으로 그리기 -->
                </Canvas>
            </ScrollViewer>
        </DockPanel>

        <!-- 오른쪽 Splitter -->
        <GridSplitter Grid.Column="3"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     Width="5"
                     Background="#E0E0E0"
                     ShowsPreview="False"
                     ResizeDirection="Columns"/>

        <!-- 오른쪽: 샘플 이미지 정보 -->
        <DockPanel Grid.Column="4" Background="#F5F5F5">
            <StackPanel DockPanel.Dock="Top" Margin="10">
                <TextBlock Text="샘플 이미지" 
                          FontWeight="Bold" 
                          FontSize="14"
                          Margin="0,10,0,10"/>
                <Button Content="홈으로" 
                       Command="{Binding NavigateToHomeCommand}"
                       Style="{StaticResource CleanButton}"
                       Background="#616161"
                       Margin="0,0,0,10"/>
                <Button Content="이미지 로드" 
                       Command="{Binding LoadSampleImageCommand}"
                       Style="{StaticResource CleanButton}"
                       Background="#4CAF50"
                       Margin="0,0,0,10"/>
            </StackPanel>
            <StackPanel Margin="10">
                <GroupBox Header="이미지 정보" Margin="0,0,0,10">
                    <StackPanel Margin="5" IsEnabled="{Binding SelectedDocument, Converter={StaticResource NullToBoolConverter}}">
                        <TextBlock Margin="0,5,0,2" TextWrapping="Wrap">
                            <Run Text="파일명:" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="{Binding SelectedDocument.SourcePath, Converter={StaticResource FileNameConverter}}" 
                                 FontSize="11"/>
                        </TextBlock>
                        <TextBlock Margin="0,10,0,2">
                            <Run Text="너비:" FontWeight="Bold"/>
                            <Run Text="{Binding SelectedDocument.ImageWidth}"/> <Run Text="px"/>
                        </TextBlock>
                        <TextBlock Margin="0,5,0,2">
                            <Run Text="높이:" FontWeight="Bold"/>
                            <Run Text="{Binding SelectedDocument.ImageHeight}"/> <Run Text="px"/>
                        </TextBlock>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>








