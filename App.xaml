<Application x:Class="SimpleOverlayEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utils="clr-namespace:SimpleOverlayEditor.Utils"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <utils:FileNameConverter x:Key="FileNameConverter"/>
        <utils:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <utils:MarkedCountConverter x:Key="MarkedCountConverter"/>
        <utils:UnmarkedCountConverter x:Key="UnmarkedCountConverter"/>
        <utils:BarcodeSuccessCountConverter x:Key="BarcodeSuccessCountConverter"/>
        <utils:BarcodeFailureCountConverter x:Key="BarcodeFailureCountConverter"/>
        <utils:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- 홈 화면 모드 버튼 스타일 -->
        <Style x:Key="HomeModeButton" TargetType="Button">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>

