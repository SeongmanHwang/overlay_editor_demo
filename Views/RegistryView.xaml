<UserControl x:Class="SimpleOverlayEditor.Views.RegistryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 도구바 -->
        <Border Grid.Row="0" 
                Background="#2196F3" 
                Padding="10,8">
            <StackPanel Orientation="Horizontal">
                <Button Content="홈으로" 
                       Command="{Binding Navigation.NavigateToHomeCommand}"
                       Padding="12,5"
                       Background="#757575"
                       Foreground="White"
                       FontWeight="Normal"
                       Margin="0,0,10,0"/>
            </StackPanel>
        </Border>

        <!-- 탭 컨트롤: 수험생/면접위원 명부 -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- 수험생 명부 탭 -->
            <TabItem Header="수험생 명부">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 버튼 영역 -->
                    <StackPanel Grid.Row="0" 
                               Orientation="Horizontal" 
                               Margin="0,10,0,10">
                        <Button Content="XLSX 파일 불러오기" 
                               Command="{Binding LoadStudentRegistryCommand}"
                               Padding="12,5"
                               Background="#4CAF50"
                               Foreground="White"
                               FontWeight="Bold"
                               Margin="0,0,10,0"/>
                        <Button Content="저장" 
                               Command="{Binding SaveStudentRegistryCommand}"
                               Padding="12,5"
                               Background="#2196F3"
                               Foreground="White"
                               Margin="0,0,10,0"/>
                    </StackPanel>

                    <!-- 데이터 그리드 -->
                    <DataGrid Grid.Row="1"
                             ItemsSource="{Binding StudentRegistry.Students}"
                             AutoGenerateColumns="True"
                             IsReadOnly="True"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             SelectionMode="Single"
                             GridLinesVisibility="All"
                             HeadersVisibility="Column"
                             AlternatingRowBackground="#F5F5F5"/>
                </Grid>
            </TabItem>

            <!-- 면접위원 명부 탭 -->
            <TabItem Header="면접위원 명부">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 버튼 영역 -->
                    <StackPanel Grid.Row="0" 
                               Orientation="Horizontal" 
                               Margin="0,10,0,10">
                        <Button Content="XLSX 파일 불러오기" 
                               Command="{Binding LoadInterviewerRegistryCommand}"
                               Padding="12,5"
                               Background="#4CAF50"
                               Foreground="White"
                               FontWeight="Bold"
                               Margin="0,0,10,0"/>
                        <Button Content="저장" 
                               Command="{Binding SaveInterviewerRegistryCommand}"
                               Padding="12,5"
                               Background="#2196F3"
                               Foreground="White"
                               Margin="0,0,10,0"/>
                    </StackPanel>

                    <!-- 데이터 그리드 -->
                    <DataGrid Grid.Row="1"
                             ItemsSource="{Binding InterviewerRegistry.Interviewers}"
                             AutoGenerateColumns="True"
                             IsReadOnly="True"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             SelectionMode="Single"
                             GridLinesVisibility="All"
                             HeadersVisibility="Column"
                             AlternatingRowBackground="#F5F5F5"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
