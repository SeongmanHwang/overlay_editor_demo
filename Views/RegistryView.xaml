<UserControl x:Class="SimpleOverlayEditor.Views.RegistryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <Border Grid.Row="0" 
                Background="#2E7D32"
                Padding="30,25"
                BorderThickness="0,0,0,2"
                BorderBrush="#1B5E20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="수험생 명렬 관리" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          VerticalAlignment="Center"
                          TextOptions.TextRenderingMode="ClearType"
                          TextOptions.TextFormattingMode="Display"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- 수험생 명부 탭일 때만 표시 -->
                    <Button Content="양식 내보내기" 
                           Command="{Binding ExportStudentRegistryTemplateCommand}"
                           Background="#FF9800"
                           Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource CleanButton}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsStudentTabSelected}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- 면접위원 명부 탭일 때만 표시 -->
                    <Button Content="양식 내보내기" 
                           Command="{Binding ExportInterviewerRegistryTemplateCommand}"
                           Background="#FF9800"
                           Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource CleanButton}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInterviewerTabSelected}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- 수험생 명부 탭일 때만 표시 -->
                    <Button Content="파일 불러오기" 
                           Command="{Binding LoadStudentRegistryCommand}"
                           Background="#4CAF50"
                           Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource CleanButton}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsStudentTabSelected}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- 면접위원 명부 탭일 때만 표시 -->
                    <Button Content="파일 불러오기" 
                           Command="{Binding LoadInterviewerRegistryCommand}"
                           Background="#4CAF50"
                           Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource CleanButton}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInterviewerTabSelected}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- 수험생 명부 탭일 때만 표시 -->
                    <Button Content="저장" 
                           Command="{Binding SaveStudentRegistryCommand}"
                           Background="#1976D2"
                           Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource CleanButton}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsStudentTabSelected}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- 면접위원 명부 탭일 때만 표시 -->
                    <Button Content="저장" 
                           Command="{Binding SaveInterviewerRegistryCommand}"
                           Background="#1976D2"
                           Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource CleanButton}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInterviewerTabSelected}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="홈으로" 
                           Command="{Binding NavigateToHomeCommand}"
                           Style="{StaticResource CleanButton}"
                           Background="#616161"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 탭 컨트롤: 수험생/면접위원 명부 -->
        <Border Grid.Row="1" 
                Background="White"
                Margin="20,20,20,20"
                CornerRadius="12"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="15" ShadowDepth="2"/>
            </Border.Effect>
            <TabControl SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}"
                      BorderThickness="0">
            <!-- 수험생 명부 탭 -->
            <TabItem Header="수험생 명부">
                <DataGrid ItemsSource="{Binding StudentRegistry.Students}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         GridLinesVisibility="All"
                         HeadersVisibility="Column"
                         AlternatingRowBackground="#F5F5F5"
                         Margin="10"
                         Sorting="StudentDataGrid_Sorting">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="수험번호" Binding="{Binding StudentId}" SortMemberPath="StudentId" Width="100"/>
                        <DataGridTextColumn Header="접수번호" Binding="{Binding RegistrationNumber}" SortMemberPath="RegistrationNumber" Width="100"/>
                        <DataGridTextColumn Header="전형명" Binding="{Binding ExamType}" SortMemberPath="ExamType" Width="100"/>
                        <DataGridTextColumn Header="성명" Binding="{Binding Name}" SortMemberPath="Name" Width="100"/>
                        <DataGridTextColumn Header="생년월일" Binding="{Binding BirthDate}" SortMemberPath="BirthDate" Width="120"/>
                        <DataGridTextColumn Header="출신교명" Binding="{Binding MiddleSchool}" SortMemberPath="MiddleSchool" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- 면접위원 명부 탭 -->
            <TabItem Header="면접위원 명부">
                <DataGrid ItemsSource="{Binding InterviewerRegistry.Interviewers}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         GridLinesVisibility="All"
                         HeadersVisibility="Column"
                         AlternatingRowBackground="#F5F5F5"
                         Margin="10"
                         Sorting="InterviewerDataGrid_Sorting">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="면접위원번호" Binding="{Binding InterviewerId}" SortMemberPath="InterviewerId" Width="150"/>
                        <DataGridTextColumn Header="성명" Binding="{Binding Name}" SortMemberPath="Name" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
        </Border>
    </Grid>
</UserControl>
