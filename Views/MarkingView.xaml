<UserControl x:Class="SimpleOverlayEditor.Views.MarkingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SimpleOverlayEditor.ViewModels"
             xmlns:models="clr-namespace:SimpleOverlayEditor.Models"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>  <!-- 왼쪽: 문서 목록 및 설정 -->
            <ColumnDefinition Width="*"/>    <!-- 중앙: 결과 표시 -->
            <ColumnDefinition Width="300"/>  <!-- 오른쪽: 마킹 결과 상세 -->
        </Grid.ColumnDefinitions>

        <!-- 왼쪽: 문서 목록 및 설정 -->
        <DockPanel Grid.Column="0" Background="#F5F5F5">
            <StackPanel DockPanel.Dock="Top" Margin="10">
                <TextBlock Text="마킹 감지" 
                          FontWeight="Bold" 
                          FontSize="16"
                          Margin="0,10,0,15"/>
                <Button Content="홈으로" 
                       Command="{Binding Navigation.NavigateToHomeCommand}"
                       Margin="0,0,0,10"
                       Padding="8,5"
                       Background="#757575"
                       Foreground="White"/>
                <Separator Margin="0,10"/>
            </StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <GroupBox Header="설정" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock Text="임계값:" Margin="0,5,0,2" FontWeight="Bold"/>
                            <TextBox Text="{Binding MarkingThreshold, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="0,0,0,10"/>
                            <Button Content="현재 문서 감지" 
                                   Command="{Binding DetectMarkingsCommand}"
                                   Margin="0,0,0,5"
                                   Padding="6,3"
                                   Background="#2196F3"
                                   Foreground="White"
                                   FontWeight="Bold"/>
                            <Button Content="전체 문서 감지" 
                                   Command="{Binding DetectAllMarkingsCommand}"
                                   Margin="0,0,0,10"
                                   Padding="6,3"
                                   Background="#4CAF50"
                                   Foreground="White"
                                   FontWeight="Bold"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="문서 목록" Margin="0,0,0,10">
                        <ListBox ItemsSource="{Binding Documents}"
                                SelectedItem="{Binding SelectedDocument}"
                                MaxHeight="300">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding SourcePath, Converter={StaticResource FileNameConverter}}" 
                                              TextWrapping="Wrap"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>

        <!-- 중앙: 결과 요약 -->
        <DockPanel Grid.Column="1" Background="White">
            <StackPanel DockPanel.Dock="Top" Margin="10">
                <TextBlock Text="마킹 감지 결과" 
                          FontWeight="Bold" 
                          FontSize="18"
                          Margin="0,10,0,10"/>
            </StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                <StackPanel>
                    <TextBlock Text="문서를 선택하고 마킹 감지를 실행하세요." 
                              FontSize="14" 
                              Foreground="#666"
                              Margin="10">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentMarkingResults}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CurrentMarkingResults, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    
                    <DataGrid ItemsSource="{Binding CurrentMarkingResults}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             HeadersVisibility="Column">
                        <DataGrid.Style>
                            <Style TargetType="DataGrid">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentMarkingResults, Converter={StaticResource NullToBoolConverter}}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Style>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="영역 번호" Binding="{Binding AreaIndex}" Width="80"/>
                            <DataGridTextColumn Header="마킹 여부" Binding="{Binding IsMarked}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMarked}" Value="True">
                                                <Setter Property="Foreground" Value="Green"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsMarked}" Value="False">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="평균 밝기" Binding="{Binding AverageBrightness, StringFormat=F2}" Width="100"/>
                            <DataGridTextColumn Header="임계값" Binding="{Binding Threshold, StringFormat=F2}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>

        <!-- 오른쪽: 상세 정보 -->
        <DockPanel Grid.Column="2" Background="#F5F5F5">
            <TextBlock DockPanel.Dock="Top" 
                      Text="상세 정보" 
                      FontWeight="Bold" 
                      FontSize="14"
                      Margin="10,10,10,5"
                      Padding="5"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <GroupBox Header="선택된 문서" Margin="0,0,0,10">
                        <StackPanel Margin="5" IsEnabled="{Binding SelectedDocument, Converter={StaticResource NullToBoolConverter}}">
                            <TextBlock Margin="0,5,0,2" TextWrapping="Wrap">
                                <Run Text="파일명:" FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="{Binding SelectedDocument.SourcePath, Converter={StaticResource FileNameConverter}}" 
                                     FontSize="11"/>
                            </TextBlock>
                            <TextBlock Margin="0,10,0,2">
                                <Run Text="너비:" FontWeight="Bold"/>
                                <Run Text="{Binding SelectedDocument.ImageWidth}"/> <Run Text="px"/>
                            </TextBlock>
                            <TextBlock Margin="0,5,0,2">
                                <Run Text="높이:" FontWeight="Bold"/>
                                <Run Text="{Binding SelectedDocument.ImageHeight}"/> <Run Text="px"/>
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="채점 영역 정보" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="채점 영역이 설정되어 있어야 마킹 감지가 가능합니다." FontSize="11" Foreground="#666"/>
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="결과 요약" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="감지된 결과:" FontWeight="Bold"/>
                                <LineBreak/>
                                <Run Text="{Binding CurrentMarkingResults.Count, Mode=OneWay, TargetNullValue=0}"/> <Run Text="개 영역"/>
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>

